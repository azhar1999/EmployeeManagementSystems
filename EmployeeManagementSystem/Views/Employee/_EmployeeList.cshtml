@using EmployeeManagementSystem.Models.DTOs
@model List<EmployeeInfo>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Contact Number</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr><td colspan="6" class="text-center text-muted">No employees found.</td></tr>
        }
        else
        {
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName @employee.LastName</td>
                    <td>@employee.Gender</td>
                    <td>@employee.ContactNumber</td>
                    <td>@employee.Email</td>
                    <td>@employee.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-warning btn-sm edit-btn" data-id="@employee.Id">Edit</button>
                        <button class="btn btn-danger btn-sm delete-btn ml-4" data-id="@employee.Id">Delete</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
