@using EmployeeManagementSystem.Models.DTOs
@model EmployeeInfo

<form id="employeeForm">
	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<label>First Name</label>
		<input type="text"	class="form-control" asp-for="FirstName" required/>
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label>Last Name</label>
		<input type="text" class="form-control" asp-for="LastName" required />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label>Gender</label>
		<select asp-for="Gender" class="form-control" required>
			<option value="Male">Male</option>
			<option value="Female">Female</option>
			<option value="Other">Other</option>
		</select>
		<span asp-validation-for="Gender" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label>Date of Birth</label>
		<input asp-for="DateOfBirth" class="form-control" type="date" required />
	</div>

	<div class="form-group mt-2">
		<label>Email</label>
		<input asp-for="Email" class="form-control" type="email" required />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label>Contact Number</label>
		<input asp-for="ContactNumber" class="form-control" required />
		<span asp-validation-for="ContactNumber" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary mt-4">Submit</button>
	<button type="button" class="btn btn-secondary mt-4" data-bs-dismiss="modal">Cancel</button>


</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}